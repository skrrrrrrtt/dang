-- Present Egg Auto Hatch (Standalone)
-- Made to match PS99 networking style

repeat task.wait() until game:IsLoaded()

-- PS99 Place Check
local validPlaces = {
    [8737899170] = true,
    [16498369169] = true,
    [17503543197] = true
}
if not validPlaces[game.PlaceId] then
    return warn("Not Pet Simulator 99")
end

-- Services
local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local VirtualUser = game:GetService("VirtualUser")
local Workspace = game:GetService("Workspace")

local LocalPlayer = Players.LocalPlayer

-- Load Client Library (same way your script does)
local Client = {}
for _,v in ReplicatedStorage.Library.Client:GetChildren() do
    local success, result = pcall(require, v)
    if success then
        Client[v.Name] = result
    end
end

-- SETTINGS
local EGG_NAME = "Present Egg" -- ðŸ‘ˆ egg name
local HATCH_AMOUNT = 35         -- 1 / 3 / 8 / 99 (depends on gamepass)
local AUTO_HATCH = true

-- Helper
local function clickSkip()
    VirtualUser:Button1Down(Vector2.new(math.huge, math.huge))
    VirtualUser:Button1Up(Vector2.new(math.huge, math.huge))
end

-- Main Hatch Loop
task.spawn(function()
    while AUTO_HATCH do
        -- Request egg hatch
        pcall(function()
            Client.Network.Invoke(
                "Eggs_RequestPurchase",
                EGG_NAME,
                HATCH_AMOUNT
            )
        end)

        -- Skip animation
        repeat
            task.wait()
            clickSkip()
        until not Workspace.Camera:FindFirstChild("Eggs")

        task.wait(0.2)
    end
end)

print("âœ… Present Egg Auto Hatch Loaded")
