local Players = game:GetService("Players")
local player = Players.LocalPlayer
local playerGui = player:PlayerGui

-- Function to find and print all active quests
local function detectQuests()
    -- Navigate to the quest UI container
    -- This path may vary, so we'll search through PlayerGui
    
    for _, gui in pairs(playerGui:GetDescendants()) do
        if gui:IsA("TextLabel") then
            local text = gui.Text
            
            -- Check if this text contains quest-like patterns
            if string.match(text, "%d+/%d+") then -- Matches progress like "23/30"
                print("Quest found:", text)
                
                -- Extract quest details
                local progress = string.match(text, "(%d+/%d+)")
                print("Progress:", progress)
            end
        end
    end
end

-- Run the detection
detectQuests()

-- Optional: Monitor for quest updates
playerGui.DescendantAdded:Connect(function(descendant)
    if descendant:IsA("TextLabel") then
        wait(0.1) -- Small delay for text to load
        if string.match(descendant.Text, "%d+/%d+") then
            print("New/Updated Quest:", descendant.Text)
        end
    end
end)
